            },
            {
                "desc": "Reversal of string with mixed alphanumeric characters",
                "inputs": {
                    "sentence": "abc123"
                },
                "expected": "321cba"
            },
            {
                "desc": "Reversal of string with special characters",
                "inputs": {
                    "sentence": "!@#$%"
                },
                "expected": "%$#@!"
            },
            {
                "desc": "Reversal of string with mixed case letters",
                "inputs": {
                    "sentence": "AbC"
                },
                "expected": "CbA"
